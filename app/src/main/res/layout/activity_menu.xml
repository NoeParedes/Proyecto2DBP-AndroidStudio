<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="60dp"
            android:text="Inicio"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/viewAccountButton"
            android:layout_width="match_parent"
            android:text="Ver Cuenta"
            android:backgroundTint="@color/btn_color"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            style="@style/MenuButton"/>
        <Button
            android:id="@+id/buyBooksButton"
            android:layout_width="match_parent"
            android:text="Comprar libros"
            android:backgroundTint="@color/btn_color"
            android:drawableLeft="@drawable/ic_sell"
            style="@style/MenuButton"/>
        <Button
            android:id="@+id/viewPurchaseButton"
            android:layout_width="match_parent"
            android:text="Ver mis Compras"
            android:backgroundTint="@color/btn_color"
            android:drawableLeft="@drawable/baseline_remove_red_eye_24"
            style="@style/MenuButton"/>
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:text="Cerrar Sesion"
            android:backgroundTint="@color/btn_color"
            android:drawableLeft="@drawable/ic_logout"
            style="@style/MenuButton"/>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>